<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="plan">

	<select id="placeList" resultType="map" parameterType="string">
		SELECT * FROM HOTSPOT WHERE HOTSPOT_AREA_NAME = #{place}
	</select>
	<select  id="placecount" resultType="_int" parameterType="string">
		SELECT COUNT("HOTSPOT_NAME") FROM HOTSPOT WHERE HOTSPOT_AREA_NAME = #{place}
	</select>
	<insert id="insertPlan" parameterType="map">
		INSERT INTO DAY VALUES()
	</insert>
	<insert id="insertBoard" parameterType="map">
		INSERT INTO BOARD VALUES(TR_SEQ.NEXTVAL,'admin','타이틀',#{place},#{area},0,DEFAULT)
	</insert>
</mapper>
